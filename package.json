{
  "name": "dd-timelaper",
  "version": "1.0.0",
  "description": "DevDuo Internal",
  "main": "main/app.js",
  "scripts": {
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build",
    "package": "npm-run-all package:*",
    "package:mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --out=out --icon=assets/app-icon/mac/app.icns --osx-sign.identity='Developer ID Application: GitHub' --extend-info=assets/mac/info.plist",
    "package:win": "electron-packager . --overwrite --platform=win32 --arch=ia32 --out=out --icon=assets/app-icon/win/app.ico",
    "package:linux": "electron-packager . --overwrite --platform=linux --arch=x64 --out=out",
    "package:sign-exe": "signcode './out/Electron API Demos-win32-ia32/Electron API Demos.exe' --cert ~/electron-api-demos.p12 --prompt --name 'Electron API Demos' --url 'http://electron.atom.io'",
    "package:installer": "node ./script/installer.js",
    "package:sign-installer": "signcode './out/windows-installer/ElectronAPIDemosSetup.exe' --cert ~/electron-api-demos.p12 --prompt --name 'Electron API Demos' --url 'http://electron.atom.io'",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Electron Tutorial App\"",
    "package-linux": "electron-packager . electron-tutorial-app --overwrite --asar=true --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds"
  },
  "build": {
    "appId": "com.devduo.time1",
    "productName": "Timelapse",
    "files": [
      "out"
    ],
    "mac": {
      "copyright": "Copyright Â© year ${author}",
      "icon": "assets/icons/mac/icon.icns",
      "darkModeSupport": true,
      "type": "distribution",
      "category": "public.app-category.developer-tools"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Development"
    },
    "nsis": {
      "createDesktopShortcut": "always"
    }
  },
  "repository": "https://github.com/iseth/dd-timelaper",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^4.2.10",
    "electron-builder": "^20.40.2",
    "electron-packager": "^13.1.1"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.3.1",
    "aws-sdk": "^2.438.0",
    "crypto": "^1.0.1",
    "dotenv": "^7.0.0",
    "electron-better-ipc": "^0.2.0",
    "electron-log": "^3.0.5",
    "electron-packager-interactive": "^0.1.3",
    "electron-store": "^3.2.0",
    "update-electron-app": "^1.3.0"
  }
}
