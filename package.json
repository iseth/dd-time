{
  "name": "dd-timelapse",
  "version": "1.2.0",
  "description": "A screen shotting application to timelapse the development process.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:win": "electron-builder build --win --publish never",
    "publish:win": "electron-builder build --win --publish always",
    "build:linux": "electron-builder build --linux --publish never",
    "publish:linux": "electron-builder build --linux --publish always"
  },
  "build": {
    "appId": "com.devduo.timelapser",
    "productName": "Timelapser",
    "win": {
      "target": "nsis",
      "publish": [
        "github"
      ]
    },
    "linux": {
      "target": [
        "appimage"
      ],
      "publish": [
        "github"
      ]
    },
    "snap": {
      "plugs": [
        "default"
      ],
      "buildPackages": [
        "libx11-dev",
        "libxtst-dev",
        "libxt-dev",
        "libx11-xcb-dev",
        "libxkbcommon-dev",
        "libxkbcommon-x11-dev"
      ],
      "stagePackages": [
        "libxkbcommon-x11-0"
      ]
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "dotenv": "^8.2.0",
    "electron-builder": "^22.1.0",
    "node-abi": "^2.12.0",
    "electron": "^18.3.7"
  },
  "dependencies": {
    "@sendgrid/mail": "^6.4.0",
    "aws-sdk": "^2.566.0",
    "crypto": "^1.0.1",
    "electron-store": "^5.1.0",
    "electron-unhandled": "^3.0.1",
    "fs": "0.0.1-security",
    "iohook": "^0.6.1",
    "os": "^0.1.1",
    "path": "^0.12.7"
  },
  "iohook": {
    "targets": [
      "node-72",
      "electron-73"
    ],
    "platforms": [
      "win32",
      "darwin",
      "linux"
    ],
    "arches": [
      "x64",
      "ia32"
    ]
  },
  "cmake-js": {
    "runtime": "electron",
    "runtimeVersion": "6.0.0"
  }
}
